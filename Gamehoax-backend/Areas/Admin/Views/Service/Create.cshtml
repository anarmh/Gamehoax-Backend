@model ServiceIconCreateVM
@{
    ViewData["Title"] = "Create";
}



<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <div class="row g-4 ">
                <div class="col-sm-12 col-xl-12">
                    <div class="bg-secondary rounded h-100 p-4">
                        <div class="form-floating mb-3">
                            <input asp-for="Icon" class="form-control" id="floatingInput" placeholder="Icon class">
                            <label for="floatingInput">icon class</label>
                            <span class="text-danger" asp-validation-for="Icon">@ViewBag.error</span>
                        </div>

                    </div>
                </div>
                   <div class="col-sm-12 col-xl-12">
                    <div class="bg-secondary rounded h-100 p-4">
                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" id="floatingInput" placeholder="Title">
                            <label for="floatingInput">Title</label>
                            <span class="text-danger" asp-validation-for="Title">@ViewBag.error</span>
                        </div>

                    </div>
                </div>
                   <div class="col-sm-12 col-xl-12">
                    <div class="bg-secondary rounded h-100 p-4">
                        <div class="form-floating mb-3">
                            <input asp-for="Description" class="form-control" id="floatingInput" placeholder="Description">
                            <label for="floatingInput">Description</label>
                            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-outline-success mr-2">Submit</button>
            <a class="btn btn-outline-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>


@section AdminScripts{
    <partial name="_ValidationScriptsPartial" />
 }


