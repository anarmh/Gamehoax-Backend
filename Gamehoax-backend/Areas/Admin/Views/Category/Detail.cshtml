@model CategoryDetailVM
@{
    ViewData["Title"] = "Detail";
}

@section AdminCss{
    <link href="~/admin/css/admin.css" rel="stylesheet">

}




    <div class="container mt-5">
    <div class="bg-secondary rounded h-100 p-4">
        <div class="detail-card">
            <img class="detail-image" src="~/assets/img/category/@Model.Image" alt="Item Image">
            <div class="detail-content">
                <h1 class="detail-name">@Model.Name</h1>
                <p class="detail-description">@Model.Title</p>
                <p class="detail-description">@Model.Description</p>
                <p class="detail-createdate">@Model.CreateDate</p>
            </div>

         
        </div>
             <div class="form-group">
                        <div class="buttons my-3">
                          <a class="btn btn-outline-info d-block mt-3" asp-action="Index">Back</a>
                         </div>
             </div>

      </div>
     </div>
       

@section AdminScripts{
    <partial name="_ValidationScriptsPartial" />
 }




