@model List<Blog>
@{
    ViewData["Title"] = "Index";
}



<div class="container my-3">
    <h2 class="text-center">Blogs</h2>
    <div class="create-btn ">
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("SuperAdmin"))
            {
                <a asp-action="Create" class="btn btn-outline-success ">Create</a>
            }
        }
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>

                    <th>
                        Description
                    </th>

                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/assets/img/blog/@item.Image" style="width:300px;height:200px" />
                        </td>
                        <td class="py-1">
                            @item.Title
                        </td>

                        <td class="py-1">
                            @item.Description
                        </td>




                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info d-block ">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning d-block  my-2">Edit</a>
                            <form style="display: inline-block;" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-outline-danger  ">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


