@model LoginVM
@{
    ViewData["Title"] = "SignIn";
}



@section Css {

    <link rel="stylesheet" href="~/assets/scss/pages/login/login.css">
}

<main>
    <section id="login">
        <div class="container d-flex justify-content-center my-5">
            <div class="box">
                <form asp-action="SignIn" method="post">
                    <h2>Sign In</h2>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="input-box">
                        <input asp-for="EmailOrUsername" required>
                        <span>Username</span>
                        <i></i>
                    </div>
                     <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
                    <div class="input-box">
                        <input asp-for="Password" required>
                        <span>Enter Password</span>
                        <i></i>
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <input type="submit" value="login">
                    <div class="links">
                        <a asp-action="ForgotPassword">Forgot Password?</a>
                        <a asp-action="SignUp">SignUp</a>
                    </div>

                </form>
            </div>
        </div>

    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/js/login.js"></script>
}