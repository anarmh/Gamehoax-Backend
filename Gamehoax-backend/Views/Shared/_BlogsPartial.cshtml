@model Paginate<Blog>


@section Css {

    <link rel="stylesheet" href="~/assets/scss/pages/blog/blog.css">
}


@if (Model.Datas.Count > 0)
{
    @foreach (var blog in Model.Datas)
    {  
      
        <div class="post mb-4">
            <div class="row">
                <div class="col-6">

                    <div class="img">
                        <img src="~/assets/img/blog/@blog.Image" alt="">

                    </div>
                </div>
                <div class="col-6 m-auto">
                    <div class="blog-info">
                        <div class="blog-icon"><i class="@blog.BlogIcon"></i></div>
                        <div class="entry-header">
                            <h1>
                                @blog.Title

                            </h1>
                        </div>
                        <div class="other">
                            <p>@blog.Description </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
     
    }

    <div class="  pagination d-flex justify-content-center mt-3">
        <nav aria-label="..." class=" ">
            <ul class="pagination">
                <li class="page-item @(Model.HasPrevious ? "" : "d-none")">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)" asp-action="Index" asp-route-searchText="@ViewBag.searchText" style="color:#f9aa01; text-decoration:none; cursor:pointer;" tabindex="-1">Prev</a>
                </li>
                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")" style="box-shadow:none !important; outline:none !important;">
                        <a class="page-link @(Model.CurrentPage == i ? "active-paginate" : "")" asp-action="Index" asp-route-searchText="@ViewBag.searchText" style="color:#f9aa01;; text-decoration:none; cursor:pointer;" asp-route-page="@i" style="box-shadow:none !important">@i</a>
                    </li>
                }

                <li class="page-item @(Model.HasNext ? "" : "d-none")">
                    <a class="page-link" asp-action="Index" asp-route-searchText="@ViewBag.searchText" style="color:#f9aa01; text-decoration:none; cursor:pointer;" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
}


else
{
    <div class="alert alert-warning" style="background-color:#f9aa01;" role="alert">
        Product Not Found...
    </div>
}


@section Scripts{
    <script src="~/assets/js/blog.js"></script>
   
}
