@model LayoutVM

<footer>
    <section id="footer-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-3">
                    <div class="first">
                        <h3>Address Info</h3>
                        <ul>
                            <li>
                                <div class="address content">
                                    <div class="icon">
                                        <i class="fa fa-map-marker"></i>
                                    </div>
                                    <div class="contact address"><span>@Model.SettingDatas["FooterAddress"]</span></div>
                                </div>
                            </li>
                            <li>
                                <div class="phone content">
                                    <div class="icon">
                                        <i class="fa fa-phone"></i>
                                    </div>
                                    <div class="contact">
                                        <span>@Model.SettingDatas["FooterPhone"]</span>
                                    </div>

                                </div>
                            </li>
                            <li>
                                <div class="email content">
                                    <div class="icon">
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                    <div class="contact">
                                        <span>@Model.SettingDatas["FooterEmail"]</span>
                                    </div>

                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-3">
                    <h3>Information</h3>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Wishlist" asp-action="Index">Wishlist</a></li>
                        <li><a asp-controller="ProductDetail" asp-action="Index">Product Detail</a></li>
                        <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-3">
                    <h3>Extrass</h3>
                    <ul>
                        <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li><a asp-controller="Cart" asp-action="Index">Cart</a></li>
                        <li><a asp-controller="Account" asp-action="SignUp">Register</a></li>
                        <li><a asp-controller="Account" asp-action="SignIn">Login</a></li>
                        <li><a asp-controller="About" asp-action="Index">About Us</a></li>
                    </ul>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-3">
                    <div class="title-outer">
                        <h3>Our Newsletter</h3>
                        <p>There are many variations of passages of form humour or randomised</p>
                        <div class="tnp tnp-widget">
                            <form asp-controller="Home" asp-action="PostSubscribe" method="post">
                                @*<input type="hidden" >
                                <input type="hidden" >*@
                                <div class="tnp-field tnp-field-email">
                                    <input asp-for="Email" value="" class="tnp-email" placeholder="Subscribe to our newsletter...">
                                    <span class="text-danger" style="z-index:5;" asp-validation-for="Email">@ViewBag.error</span>
                                </div>
                                <div class="tnp-field tnp-field-button">
                                    <input class="tnp-submit" type="submit" value="Subscribe">
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>
    <div class="backtotop">
        <a id="to-top" href="#">Top</a>
    </div>

</footer>