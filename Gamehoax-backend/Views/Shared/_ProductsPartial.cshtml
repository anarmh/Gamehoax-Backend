            <div class="pagination d-flex justify-content-center mt-3">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)" tabindex="-1">←</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
