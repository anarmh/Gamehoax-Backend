                        </li>
                    }

                    <li class="page-item @(Model.HasNext ? "" : "disabled")">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">→</a>
                    </li>
                </ul>
            </nav>
        </div>*@

        <div class="pagination d-block">
            <ul>
                <li class="@(Model.HasPrevious? "":"disabled")">
                    <a asp-action="Index" asp-route-sortValue="@ViewBag.sortValue" asp-route-searchText="@ViewBag.searchText" asp-route-categoryId="@ViewBag.categoryId" asp-route-tagId="@ViewBag.tagId" asp-route-value1="@ViewBag.value1" asp-route-value2="@ViewBag.value2" asp-route-page="@(Model.CurrentPage -1)">
                        ←
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    <li class=" @(Model.CurrentPage == i ? "disabled" : "") ">
                    <a class="@(Model.CurrentPage == i ? "active-paginate" : "")" asp-action="Index" asp-route-sortValue="@ViewBag.sortValue" asp-route-searchText="@ViewBag.searchText" asp-route-categoryId="@ViewBag.categoryId" asp-route-tagId="@ViewBag.tagId" asp-route-value1="@ViewBag.value1" asp-route-value2="@ViewBag.value2" asp-route-page="@i">@i</a>
                    </li>
                }


                <li class=" @(Model.HasNext? " " :"disabled") ">
                    <a asp-action="Index" asp-route-sortValue="@ViewBag.sortValue" asp-route-searchText="@ViewBag.searchText" asp-route-categoryId="@ViewBag.categoryId" asp-route-tagId="@ViewBag.tagId" asp-route-value1="@ViewBag.value1" asp-route-value2="@ViewBag.value2" asp-route-page="@(Model.CurrentPage +1)">→</a>
                </li>
            </ul>
        </div>
            
       
    }



@section Scripts{
    <script src="~/assets/js/shop.js"></script>
}

